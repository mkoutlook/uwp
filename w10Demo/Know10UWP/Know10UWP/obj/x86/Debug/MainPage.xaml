<Page
    x:Class="Know10UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Know10UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
            <TextBox x:ConnectionId='1' x:Name="textBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
                <Button x:ConnectionId='2' x:Name="btnClick" Content="click" HorizontalAlignment="Left" VerticalAlignment="Top"                    />
                <Button x:ConnectionId='3' x:Name="btnHover" Content="Hover" HorizontalAlignment="Left" VerticalAlignment="Top"                     ClickMode="Hover"/>
                <Button x:ConnectionId='4' x:Name="btnAppBarButton" Content="AppBarButton" HorizontalAlignment="Left" VerticalAlignment="Top"                   />
                <Button x:ConnectionId='5' x:Name="btnPivot" Content="pivot" HorizontalAlignment="Left" VerticalAlignment="Top"                       />
                <Button x:ConnectionId='6' x:Name="btnToggle" Content="ToggleSwitch" HorizontalAlignment="Left" VerticalAlignment="Top"                        />
                <Button x:ConnectionId='7' x:Name="btnSplitView" Content="SplitView" HorizontalAlignment="Left" VerticalAlignment="Top"                           />
                <Button x:ConnectionId='8' x:Name="btnListView" Content="ListView" HorizontalAlignment="Left" VerticalAlignment="Top"                          />
                <Button x:ConnectionId='9' x:Name="btnHyperLink" Content="HyperLink" HorizontalAlignment="Left" VerticalAlignment="Top"                           />
                <Button x:ConnectionId='10' x:Name="btnStackpanel" Content="stackpanel" HorizontalAlignment="Left" VerticalAlignment="Top"                            />
                <Button x:ConnectionId='11' x:Name="btnAutoSuggestion" Content="Autosuggestion" HorizontalAlignment="Left" VerticalAlignment="Top"                                />
                <Button x:ConnectionId='12' x:Name="btnBorder" Content="border" HorizontalAlignment="Left" VerticalAlignment="Top"                      />
                <Button x:ConnectionId='13' x:Name="btnCalender" Content="calender" HorizontalAlignment="Left" VerticalAlignment="Top"                        />
                <Button x:ConnectionId='14' x:Name="btnCheckbox" Content="checkbx" HorizontalAlignment="Left" VerticalAlignment="Top"                        />
                <Button x:ConnectionId='15' x:Name="btnCombobox" Content="combobox" HorizontalAlignment="Left" VerticalAlignment="Top"                        />
                <Button x:ConnectionId='16' x:Name="btnCommandbar" Content="commandbar" HorizontalAlignment="Left" VerticalAlignment="Top"                          />
                <Button x:ConnectionId='17' x:Name="btnContentControl" Content="contentControl" HorizontalAlignment="Left" VerticalAlignment="Top"                              />
                <Button x:ConnectionId='18' x:Name="btnContentDialogControl" Content="contentDialog" HorizontalAlignment="Left" VerticalAlignment="Top"                             />
                <Button x:ConnectionId='19' x:Name="btnCustomDialog" Content="customDialog" HorizontalAlignment="Left" VerticalAlignment="Top"                          />
                <Button x:ConnectionId='20' x:Name="btnHub" Content="Hub" HorizontalAlignment="Left" VerticalAlignment="Top"                   />
                <Button x:ConnectionId='21' x:Name="btnMenuFlyout" Content="menuFlyout" HorizontalAlignment="Left" VerticalAlignment="Top"                       />
                <Button x:ConnectionId='22' x:Name="btnFlipView" Content="flipview" HorizontalAlignment="Left" VerticalAlignment="Top"                        />

                <Button x:ConnectionId='23' x:Name="btnViewBox" Content="viewbox" HorizontalAlignment="Left" VerticalAlignment="Top"                       />
                <Button x:ConnectionId='24' x:Name="btnPopup" Content="popup" HorizontalAlignment="Left" VerticalAlignment="Top"                       />
                <Button x:ConnectionId='25' x:Name="btnRichEdit" Content="richEditBox" HorizontalAlignment="Left" VerticalAlignment="Top"                          />
                <Button x:ConnectionId='26' x:Name="btnRichEditBlock" Content="richEditBlock" HorizontalAlignment="Left" VerticalAlignment="Top"                               />
                <Button x:ConnectionId='27' x:Name="btnSearchbox" Content="searchBox" HorizontalAlignment="Left" VerticalAlignment="Top"                           />
                <Button x:ConnectionId='28' x:Name="btnWebView" Content="webView" HorizontalAlignment="Left" VerticalAlignment="Top"                     />
            </StackPanel>
        </ScrollViewer>
        <!--<ProgressRing x:Name="progress1" IsActive="True"/>-->
        <!--<Grid.Background>#76303A</Grid.Background>-->
    </Grid>
</Page>

